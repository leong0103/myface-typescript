<html lang="en-gb">
<%- include('_head') -%>
<%- include('_header') -%>
<body>
<div class="page-content">

    <div class="user-detail-page-header">
        <div class="cover-img">
            <img src="<%= coverImageUrl %>" alt="Profile Cover Image">
        </div>
        <div class="user-profile">
      
                <img class="profile-img" src="<%= profileImageUrl %>" alt="Profile Image">
                <div class="profile-info">

                    <h3><%= name %></h3>
                    <h3><%= username %></h3>
                    <h3><%= email %></h3>
                </div>
        
        </div>
    </div>
    
    <h3>Recent Posts</h3>
    <ol class="post-list">
        <% for (let i = 0; i < 5; i++) {
            let post = posts[i] %>
            <div class="post-detail">
                <li>
                    <img src="<%= post.imageUrl %>" alt="Post Image">
                    <h3 class="title"><%= username %></h3>
                    
                    <p><%= post.message %></p>
                </li>
            </div>
        <% }; %>
    </ol>
    <h3>Recent Likes</h3>
    <ol class="post-list">
        <% for (let i = 0; i < 5; i++) {
            let post = likes[i];
            let id = post.id;
            %>
            <div class="post-detail">
                <li>
                    <img src="<%= post.imageUrl %>" alt="Post Image">
                    <h3 class="title"><%= username %></h3>
                    
                    <p><%= post.message %></p>
                </li>
            </div>
        <% }; %>
    </ol>
</div>
</body>
<%- include('_footer') -%>
</html>